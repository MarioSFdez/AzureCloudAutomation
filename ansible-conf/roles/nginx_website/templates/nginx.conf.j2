# Configuracion global de Nginx
user www-data;
worker_processes auto;
pid /run/nginx.pid;

# Carga el modulo GeoIP2
load_module /etc/nginx/modules/ngx_http_geoip2_module.so;

include /etc/nginx/modules-enabled/*.conf;

events {
    worker_connections 768;
    # multi_accept on;
}

http {
    # Configuracion de la BBDD GeoIP2 para paises
    geoip2 /var/lib/GeoIP/GeoLite2-Country.mmdb {
        # Almacena la fecha de construccion de la BBDD
        $geoip2_metadata_country_build metadata build_epoch;
        # Almacena el codigo ISO del pais con un valor por defecto de XX si no se encuentra
        $geoip2_data_country_code default=XX country iso_code;
        # Almacena el nombre del pais
        $geoip2_data_country_name country names en;
      }

    # Configuracion de la BBDD GeoIP2 para ciudades
    geoip2 /var/lib/GeoIP/GeoLite2-City.mmdb {
        # Almacena el nombre de la ciudad
        $geoip2_data_city_name city names en;
        # Almacena el codigo ISO del pais
        $geoip2_data_country_code country iso_code;
        # Almacena el nombre del pais
        $geoip2_data_country_name country names en;
        # Almacena el codigo ISO de la region
        $geoip2_data_region subdivisions 0 iso_code;
        # Almacena el nombre de la region
        $geoip2_data_region_name subdivisions 0 names en;
        # Almacena el codigo postal
        $geoip2_data_postal_code postal code;
        # Almacena la latitud
        $geoip2_data_latitude location latitude;
        # Almacena la longitud
        $geoip2_data_longitude location longitude;
        # Almacena la zona horaria de la ubicacion
        $geoip2_data_time_zone location time_zone;
    }

    # Configuracion de la BBDD GeoIP2 para ASN
    geoip2 /var/lib/GeoIP/GeoLite2-ASN.mmdb {
        # Almacena el ISP
        $geoip2_data_isp autonomous_system_organization;
    }

    # Formato de log en JSON para Promtail
    log_format json_analytics escape=json '{'
        '"time_local":"$time_local",'
        '"remote_addr":"$remote_addr",'
        '"remote_user":"$remote_user",'
        '"request":"$request",'
        '"status": $status,'
        '"body_bytes_sent": $body_bytes_sent,'
        '"request_time": $request_time,'
        '"http_referer":"$http_referer",'
        '"http_user_agent":"$http_user_agent",'
        '"geoip_country_code":"$geoip2_data_country_code",'
        '"geoip_country_name":"$geoip2_data_country_name",'
        '"geoip_city_name":"$geoip2_data_city_name",'
        '"geoip_region":"$geoip2_data_region",'
        '"geoip_region_name":"$geoip2_data_region_name",'
        '"geoip_postal_code":"$geoip2_data_postal_code",'
        '"geoip_latitude":"$geoip2_data_latitude",'
        '"geoip_longitude":"$geoip2_data_longitude",'
        '"geoip_time_zone":"$geoip2_data_time_zone",'
        '"geoip_isp":"$geoip2_data_isp"'
    '}';

     #Lista de paises no permitidos
     map $geoip2_data_country_code $allowed_country {
	default yes;
	FR no;
	UA no;
	DK no;
	CH no;
    }

    ##
    # Configuraciones basicas
    ##

    sendfile on;               
    tcp_nopush on;             
    tcp_nodelay on;            
    keepalive_timeout 65;      
    types_hash_max_size 2048;  
    # server_tokens off;      

    # server_names_hash_bucket_size 64;
    # server_name_in_redirect off; 

    include /etc/nginx/mime.types;
    default_type application/octet-stream;

    ##
    # Configuraciones SSL
    ##

    ssl_protocols TLSv1 TLSv1.1 TLSv1.2 TLSv1.3; # Dropping SSLv3, ref: POODLE
    ssl_prefer_server_ciphers on;

    ##
    # Configuraciones de logging
    ##

    access_log /var/log/nginx/access.log;
    error_log /var/log/nginx/error.log;

    ##
    # Configuraciones de Gzip
    ##

    gzip on;

    # gzip_vary on;
    # gzip_proxied any;
    # gzip_comp_level 6;
    # gzip_buffers 16 8k;
    # gzip_http_version 1.1;
    # gzip_types text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript;

    ##
    # Configuracion de hosts virtuales
    ##

    include /etc/nginx/conf.d/*.conf;
    include /etc/nginx/sites-enabled/*;
}
